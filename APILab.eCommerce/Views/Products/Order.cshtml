@model APILab.eCommerce.Models.Product

@{
    ViewBag.Title = "Order";
}

<h2>Order</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Product</h4>
    <hr />
    <p class="lead">Create an order by entering quantity of inventory you want to request</p>

    <form>
        Quantity Requested: <input type="text" name="quantity"><br>
        <input type="submit" id="createOrder" value="Create">
    </form>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    
<script language="javascript">

        $("#createOrder").click(function () {
            var orderQuantity = document.getElementById("createOrder").value;
            $.ajax({
                type: "POST",
                dataType: "text json",
                data: {Quantity: orderQuantity},
                url: 'http://localhost:32534/api/Order/',
                success: function() {
                    alert("Your order has been created.");
                },
                error: function() {
                    alert("Error while creating order, please try again.");
                }
            });
        });
    </script>

}
